#!/usr/bin/make -f

# Uncomment this to turn on verbose mode.
#export DH_VERBOSE=1

VERS=$(shell echo `cat bin/version`)
RELS=$(shell echo `cat bin/release`)
VERSION=$(VERS)"-"$(RELS)

clean:
	dh_testdir
	dh_testroot
	dh_clean

install:
	dh_testdir
	dh_testroot
	dh_clean -k 
	dh_installdirs

	# This warn fresh checkouts from CVS, please leave...
	if ! [ -e debian/dtc.postinst ] ; then echo "postinst script missing! cd to bin and run ./prepareDebianTree first!" ; exit 1 ; fi

	echo "<?php \$$conf_dtc_version=\""$(VERS)"\"; \$$conf_dtc_release=\""$(RELS)"\"; \$$conf_unix_type=\""debian"\"; ?>" >debian/dtc/usr/share/dtc/shared/dtc_version.php
	echo "<?php \$$conf_dtc_version=\""$(VERS)"\"; \$$conf_dtc_release=\""$(RELS)"\"; \$$conf_unix_type=\""debian"\"; ?>" >debian/dtc-postfix-courier/usr/share/dtc/shared/dtc_version.php
	install -D -m 0644 debian/lintian/dtc debian/dtc/usr/share/lintian/overrides/dtc
	install -D -m 0644 debian/lintian/dtc debian/dtc-postfix-courier/usr/share/lintian/overrides/dtc-postfix-courier

binary-indep: install
binary-arch: install
	dh_testdir
	dh_testroot
	dh_installchangelogs doc/changelog
	dh_installdocs
	dh_installexamples
	dh_installdirs
	dh_install

	rm -f debian/dtc/usr/share/dtc/admin/inc/arial.ttf
	rm -f debian/dtc/usr/share/dtc/admin/inc/verdana.ttf
	rm -f debian/dtc/usr/share/dtc/admin/inc/ukai.ttf
	rm -f debian/dtc/usr/share/dtc/client/inc/arial.ttf
	rm -f debian/dtc/usr/share/dtc/client/inc/verdana.ttf
	rm -f debian/dtc/usr/share/dtc/client/inc/ukai.ttf

	rm -f debian/dtc-postfix-courier/usr/share/dtc/admin/inc/arial.ttf
	rm -f debian/dtc-postfix-courier/usr/share/dtc/admin/inc/verdana.ttf
	rm -f debian/dtc-postfix-courier/usr/share/dtc/admin/inc/ukai.ttf
	rm -f debian/dtc-postfix-courier/usr/share/dtc/client/inc/arial.ttf
	rm -f debian/dtc-postfix-courier/usr/share/dtc/client/inc/verdana.ttf
	rm -f debian/dtc-postfix-courier/usr/share/dtc/client/inc/ukai.ttf

	dh_link
	dh_installmenu -n
	dh_installdebconf	
	dh_installlogrotate
	dh_installcron
	dh_installman
	dh_compress
	dh_fixperms
	dh_installdeb
	dh_gencontrol
	dh_md5sums
	dh_builddeb

binary: binary-indep binary-arch
.PHONY: build clean binary-indep binary-arch binary install
