#!/usr/bin/make -f

# Uncomment this to turn on verbose mode.
#export DH_VERBOSE=1

VERS=`cat bin/version`
RELS=`cat bin/release`
VERSION=$(VERS)"-"$(RELS)

clean:
	dh_testdir
	dh_testroot
	dh_clean

	# Add here commands to clean up after the build process.
	#-$(MAKE) clean DESTDIR=$(CURDIR)/debian/dtc
	#-$(MAKE) clean DESTDIR=$(CURDIR)/debian/dtc-postfix-courier
	#-$(MAKE) clean DESTDIR=$(CURDIR)/debian/dtc-package-installer

	dh_clean 

install:
	dh_testdir
	dh_testroot
	dh_clean -k 
	dh_installdirs

	echo "<?php \$$conf_dtc_version=\""$(VERS)"\"; \$$conf_dtc_release=\""$(RELS)"\"; \$$conf_unix_type=\""debian"\"; ?>" >debian/dtc/usr/share/dtc/shared/dtc_version.php
	echo "<?php \$$conf_dtc_version=\""$(VERS)"\"; \$$conf_dtc_release=\""$(RELS)"\"; \$$conf_unix_type=\""debian"\"; ?>" >debian/dtc-postfix-courier/usr/share/dtc/shared/dtc_version.php

	# Add here commands to install the package into debian/dtc.
	$(MAKE) install DESTDIR=$(CURDIR)/debian/dtc
	$(MAKE) install DESTDIR=$(CURDIR)/debian/dtc-postfix-courier
	mkdir -p $(CURDIR)/debian/dtc-postfix-courier/DEBIAN
	cp $(CURDIR)/debian/postinst $(CURDIR)/debian/prerm $(CURDIR)/debian/templates $(CURDIR)/debian/config $(CURDIR)/debian/dtc-postfix-courier/DEBIAN
	$(MAKE) installpkg DESTDIR=$(CURDIR)/debian/dtc-package-installer

# Build architecture-independent files here.
binary-indep: install
# We have nothing to do by default.

# Build architecture-dependent files here.
binary-arch: install
#	dh_testdir
	dh_testroot
	dh_installchangelogs 
	dh_installdocs
	dh_installexamples
	dh_install

	rm -f debian/dtc/usr/share/dtc/admin/inc/arial.ttf
	rm -f debian/dtc/usr/share/dtc/admin/inc/verdana.ttf
	rm -f debian/dtc/usr/share/dtc/admin/inc/ukai.ttf
	rm -f debian/dtc/usr/share/dtc/client/inc/arial.ttf
	rm -f debian/dtc/usr/share/dtc/client/inc/verdana.ttf
	rm -f debian/dtc/usr/share/dtc/client/inc/ukai.ttf

	rm -f debian/dtc-postfix-courier/usr/share/dtc/admin/inc/arial.ttf
	rm -f debian/dtc-postfix-courier/usr/share/dtc/admin/inc/verdana.ttf
	rm -f debian/dtc-postfix-courier/usr/share/dtc/admin/inc/ukai.ttf
	rm -f debian/dtc-postfix-courier/usr/share/dtc/client/inc/arial.ttf
	rm -f debian/dtc-postfix-courier/usr/share/dtc/client/inc/verdana.ttf
	rm -f debian/dtc-postfix-courier/usr/share/dtc/client/inc/ukai.ttf

	dh_links
#	dh_installmenu
	dh_installdebconf	
#	dh_installlogrotate
#	dh_installemacsen
#	dh_installpam
#	dh_installmime
#	dh_installinit
#	dh_installcron
#	dh_installinfo
	dh_installman
	dh_link
	dh_strip
	dh_compress
	#dh_fixperms -X$(CURDIR)/debian/tmp/usr/share/dtc/admin -X$(CURDIR)/debian/tmp/usr/share/dtc/client -X$(CURDIR)/debian/tmp/usr/share/dtc/email -X$(CURDIR)/debian/tmp/usr/share/dtc/shared 
#	dh_perl
#	dh_python
#	dh_makeshlibs
	dh_installdeb
	dh_shlibdeps
	dh_gencontrol
	dh_md5sums
	dh_builddeb

binary: binary-indep binary-arch
.PHONY: build clean binary-indep binary-arch binary install configure
