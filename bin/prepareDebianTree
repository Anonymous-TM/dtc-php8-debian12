#cp -f sources/debian/postinst ${DSTDIR}/debian/dtc-postfix-courier.postinst
#cp -f sources/debian/prerm ${DSTDIR}/debian/dtc.prerm
#cp -f sources/debian/prerm ${DSTDIR}/debian/dtc-postfix-courier.prerm

