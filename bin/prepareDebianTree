# $Revision: 1.12 $

DSTDIR=..

VERS=`cat version`
RELS=`cat release`
if [ ""$VERS == "" ]; then
	VERS=0
fi
if [ ""$RELS == "" ]; then
	RELS=0
fi
VERSION=$VERS"-"$RELS
UNIX_TYPE=debian

echo " --- Updating DTC debian source package tree --- "

